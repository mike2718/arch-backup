# Firstly, load the common customization script.
# If you don't like settings applied in this script, remove this line.
. --autoload --no-alias initialization/common

# These are additional aliases that are not defined in the common script.
alias g='grep'
alias ls='ls -g -o -h -lt -c --time-style=+"%Y-%m-%d %H:%M"'
alias lh='ls -lh'
# alias l='$PAGER'
alias l='ls -CF'
alias a='awk'
alias c='clear'
alias e='exit'
alias s='sync'
alias bc='bc -ql'
alias -g L='|$PAGER'
alias -g N='>/dev/null 2>&1' N1='>/dev/null' N2='2>/dev/null'

export LC_ALL=en_US.utf8
export ECHO_STYLE=GNU
export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus

HISTSIZE=1000

# YASH_PS1='mike $ '
# YASH_PS2='-->'

# Uncomment to enable direnv support. (jq required)
_update_direnv() {
  eval "$(
    direnv export json |
    jq -r 'to_entries | .[] |
    if .value == null then
      @sh "unset \(.key)"
    else
      @sh "export \(.key)=\(.value)"
    end'
  )"
}
_update_direnv
YASH_AFTER_CD=("$YASH_AFTER_CD" '_update_direnv')

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

umask 0002


